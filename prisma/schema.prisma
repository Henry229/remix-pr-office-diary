generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DiaryEntry {
  id        String   @id @default(cuid())
  date      DateTime
  content   String
  mood      String?
  moodColor String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("diary_entries")
}

